{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // ðŸ’¡ Perbaikan 1: Mengubah moduleResolution ke "node" (disarankan ChatGPT)
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // ðŸ’¡ Perbaikan 2: Mengubah jsx ke "react-jsx"
    "jsx": "react-jsx", 
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
